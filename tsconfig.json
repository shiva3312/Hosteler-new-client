{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite/client", "vitest/globals"],
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@app/*": ["./src/app/*"],
      "@lib/*": ["./src/lib/*"],
      "@components/*": ["./src/components/*"],
      "@assets/*": ["./src/assets/*"],
      "@hooks/*": ["./src/hooks/*"],

      "@utils/*": ["./src/utils/*"],

      "@routes/public/*": ["./src/app/routes/public/*"],
      "@routes/auth/*": ["./src/app/routes/auth/*"],

      "@routes/app/dashboard/*": ["./src/app/routes/app/dashboard/*"],
      "@routes/app/unit/*": ["./src/app/routes/app/unit/*"],
      "@routes/app/organization/*": ["./src/app/routes/app/organization/*"],
      "@routes/app/mess/*": ["./src/app/routes/app/mess/*"],
      "@routes/app/setting/*": ["./src/app/routes/app/setting/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
